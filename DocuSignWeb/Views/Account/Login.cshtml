@{
    ViewBag.Title = "Login";
    Layout = "Layout";
}
@section Styles
{
    <link rel="stylesheet" href="~/css/app-login.css">
}

<section class="position-relative py-4 py-xl-5">
    <div class="container">
        <div class="row mb-5">
            <div class="col-md-8 col-xl-6 text-center mx-auto">
                <h2>Log in</h2>
                <p class="w-lg-50">Curae hendrerit donec commodo hendrerit egestas tempus, turpis facilisis nostra nunc. Vestibulum dui eget ultrices.</p>
            </div>
        </div>
        <div class="row d-flex justify-content-center">
            <div class="col-md-6 col-xl-5">
                <div class="card mb-5">
                    <div class="card-body d-flex flex-column align-items-center">
                        <div class="fas fa-user-circle text-primary fa-lg my-5" style="font-size: 6rem;"></div>
                        <form class="text-center w-75" method="post">
                            <div class="mb-3">
                                <input class="form-control" type="email" name="email" placeholder="Email"/>
                            </div>
                            <div class="mb-3">
                                <input class="form-control" type="password" name="password" placeholder="Password"/>
                            </div>
                            <div class="mb-3">
                                <button class="btn btn-primary d-block w-100" type="submit">Login</button>
                            </div>
                            <a class="text-muted" href="#">Forgot your password?</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>