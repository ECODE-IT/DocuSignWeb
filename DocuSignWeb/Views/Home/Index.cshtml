@using DocuSignWeb.ViewComponents
@{
    ViewData["Title"] = "Home Page";
}

@section Styles{
    <link rel="stylesheet" href="~/css/app-home.css">
    <link rel="stylesheet" href="~/css/app-side-menu.css">
    <link rel="stylesheet" href="~/css/app-documents.css">
}

<div class="container-fluid" id="main">
<section class="content-wrapper row">
    <div class="col-md-2" id="side-menu">
        @await Component.InvokeAsync(typeof(SideMenuViewComponent))
    </div>
    <div class="col-md-10" id="documents">
        <div class="row">
            <div id="documents-header" class="col-12 py-3 pl-4 pr-5 border-top-0 border border-bottom">
                <div class="row">
                    <div class="col-6 d-flex justify-content-between py-2">
                        <h4 class="font-weight-bold">{{activeMenuItem.itemName}}</h4>
                    </div>
                    <div class="ml-auto px-3 d-flex align-items-center">
                        <div class="input-group border rounded">
                            <span class="input-group-text border-0 bg-transparent">
                                <i class="fas fa-search"></i>
                            </span><input class="form-control border-0" type="text">
                        </div>
                    </div>
                    <div class="px-2 d-flex align-items-center justify-content-end">
                        <div class="row">
                            <span role="button" class="cursor-pointer input-group-text border-0 bg-transparent">
                                <i class="fas fa-sliders-h"></i>
                            </span>
                            <span role="button" class="cursor-pointer text-uppercase ">filters</span>
                        </div>
                    </div>
                </div>
            </div>
            <div id="inbox" class="col-12">
                <div class="row border border-top-0 py-2">
                    <div class="t-col t-col-1">
                        &nbsp;
                    </div>
                    <div class="t-col t-col-1 ">
                        &nbsp;
                    </div>
                    <div class="t-col t-col-8 ">
                        <div class="font-weight-bold">Subject</div>
                    </div>
                    <div class="t-col t-col-6">
                        <div class="font-weight-bold">Status</div>
                    </div>
                    <div class="t-col t-col-2 ">
                        <div class="font-weight-bold">
                            Last Change
                            <span class="ml-2">
                                <i class="fas fa-caret-down fa-lg text-muted"></i>
                            </span>
                        </div>
                    </div>
                    <div class="t-col t-col-2">

                    </div>
                </div>
                <div v-for="doc in documents" class="row border border-top-0 py-3">
                    <div class="t-col t-col-1 align-items-center">
                        <input class="form-control form-control-sm" v-bind:checked="doc.checked" type="checkbox">
                    </div>
                    <div class="t-col t-col-1 ">
                        <span v-if="doc.alert">
                            <i class="fas fa-lg text-primary fa-exclamation-circle"></i>
                        </span>
                    </div>
                    <div class="t-col t-col-8 ">
                        <div class="font-weight-bold">{{doc.subject}}</div>
                        <div>To: {{doc.to}}</div>
                    </div>
                    <div class="t-col t-col-6">
                        <div class="row">
                            <div class="col-9">
                                <div class="progress">
                                    <div class="progress-bar" aria-valuenow="50" aria-valuemin="0"
                                         aria-valuemax="100" v-bind:style="'width: '
                                                + doc.status.percentageCompleted +'%;'">
                                    </div>
                                </div>
                            </div>
                            <div class="">
                                {{doc.status.completed}}/{{doc.status.total}} done
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12">{{doc.status.info}}</div>
                        </div>
                    </div>
                    <div class="t-col t-col-2 ">
                        <div class="">{{doc.lastChange.date}}</div>
                        <div class="text-muted">{{doc.lastChange.time}}</div>
                    </div>
                    <div class="t-col t-col-2 align-items-end pr-3">
                        <div class="dropdown">
                            <button class="btn btn-primary dropdown-toggle" aria-expanded="false"
                                    data-bs-toggle="dropdown" type="button">
                                Sign
                            </button>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" href="#">First Item</a>
                                <a class="dropdown-item" href="#">Second Item</a>
                                <a class="dropdown-item" href="#">Third Item</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<div class="modal content-wrapper p-5 hide bg-white" id="modal">
    <div class="row">
        <span class="font-weight-bold text-muted">
            <i v-on:click="hideModal()" class="fas fa-times cursor-pointer"></i>
        </span>
    </div>
    <div class="row mx-5">
        <div class="col-sm-12">
            <div class="row ">
                <div class="col-12 d-flex flex-row mt-3">
                    <h3 class="font-weight-bold ">Add Documents</h3>
                    <span class="my-auto ml-auto font-weight-bold">
                        <a data-toggle="collapse" href="#addDocuments" role="button"
                           aria-expanded="true" aria-controls="addDocuments">
                            <i class="fas fa-caret-up fa-lg text-muted cursor-pointer"></i>
                        </a>
                    </span>
                </div>
                <div class="col-12 my-3 collapse show" id="addDocuments">
                    <div class="jumbotron rounded-0 bg-white text-center border-dashed border border-dark">
                        <div class="mb-4">
                            <span class="display-2">
                                <i class="fas fa-file-upload"></i>
                            </span>
                        </div>
                        <p class="my-3">Drop your files here or </p>
                        <div class="custom-file">
                            <div class="dropdown">
                                <button class="btn btn-primary dropdown-toggle text-uppercase" aria-expanded="false"
                                        data-bs-toggle="dropdown">
                                    UPLOAD
                                    <input type="file" class="custom-file-input"
                                           id="customFile" multiple hidden>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <hr class="mb-5"/>
        </div>
        <div class="col-sm-12">
            <div class="row">
                <div class="col-12 d-flex flex-row">
                    <h3 class="font-weight-bold ">Add Recipients</h3>
                    <span class="my-auto ml-auto font-weight-bold">
                        <a data-toggle="collapse" href="#addRecipients" role="button"
                           aria-expanded="true" aria-controls="addRecipients">
                            <i class="fas fa-caret-up fa-lg text-muted cursor-pointer"></i>
                        </a>
                    </span>
                </div>
                <div class="col-12 my-3 collapse show" id="addRecipients">
                    <div class="row">
                        <div class="col-12 mb-3">
                            <div class="form-check">
                                <input type="checkbox" id="only-recipient"
                                       class="form-check-input">
                                <label class="form-check-label" for="only-recipient">
                                    I'm the only recipient
                                    <span class="fas fa-exclamation-circle"></span>
                                </label>
                            </div>
                        </div>
                        <div class="col-12 my-3 d-flex flex-row">
                            <div class="form-check">
                                <input type="checkbox" id="signing-order"
                                       class="form-check-input" DISABLED>
                                <label class="form-check-label text-muted" for="signing-order">
                                    Set signing order
                                </label>
                            </div>
                            <div class="ml-3 d-flex flex-row">
                                <div class="text-primary border-right px-2">View</div>
                                <div class="px-2">
                                    <span class="font-weight-bold text-uppercase">
                                        <i class="fas fa-lock px-2"></i>
                                        IMPORT BULK LIST
                                    </span>
                                </div>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="row px-3">
                                <div class="w-100 border border-dark d-flex flex-row">
                                    <div class="bg-warning h-100" style="width: 10px;"></div>
                                    <div class="p-4 w-100 row">
                                        <div class="col-7">
                                            <div class="form-group">
                                                <label class="font-weight-bold" for="recipient-name">
                                                    Name
                                                    <span
                                                        class="text-danger">
                                                        *
                                                    </span>
                                                </label>
                                                <input type="text" id="recipient-name" class="form-control w-100">
                                            </div>
                                            <div class="form-group">
                                                <label class="font-weight-bold" for="recipient-email">
                                                    Email
                                                    <span
                                                        class="text-danger">
                                                        *
                                                    </span>
                                                </label>
                                                <input type="email" id="recipient-email" class="form-control w-100">
                                            </div>
                                        </div>
                                        <div class="col-5">
                                            <div class="row">
                                                <div class="col-6 d-flex justify-content-center">
                                                    <span class="text-uppercase font-weight-bold">
                                                        <i class="fas fa-pen mr-2"></i>
                                                        NEEDS TO SIGN
                                                        <i class="ml-2 fas fa-caret-down cursor-pointer"></i>
                                                    </span>
                                                </div>
                                                <div class="col-6 d-flex justify-content-center">
                                                    <span class="text-uppercase font-weight-bold">
                                                        CUSTOMIZE
                                                        <i class="ml-2 fas fa-caret-down cursor-pointer"></i>
                                                    </span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 mt-4">
                            <div class="dropdown">
                                <button class="btn btn-outline-secondary rounded-0 dropdown-toggle text-uppercase" aria-expanded="false"
                                        data-bs-toggle="dropdown">
                                    <i class="fas fa-user-plus mr-2"></i> ADD RECIPIENT
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <hr class="mb-5"/>
        </div>
        <div class="col-sm-12">
            <div class="row">
                <div class="col-12 d-flex flex-row">
                    <h3 class="font-weight-bold ">Add Message</h3>
                    <span class="my-auto ml-auto font-weight-bold">
                        <a data-toggle="collapse" href="#addMessage" role="button"
                           aria-expanded="true" aria-controls="addRecipients">
                            <i class="fas fa-caret-up fa-lg text-muted cursor-pointer"></i>
                        </a>
                    </span>
                </div>
                <div class="col-12 my-3 collapse show" id="addMessage">
                    <div class="row">
                        <div class="col-12 mt-2 mb-3">
                            <div class="form-group">
                                <label class="font-weight-bold" for="recipient-email">
                                    Email subject
                                    <span
                                        class="text-danger">
                                        *
                                    </span>
                                </label>
                                <input type="email" id="email-subject" class="form-control w-100">
                                <p class="text-muted my-2">Characters remaining</p>
                            </div>
                            <div class="form-group mt-4">
                                <label class="font-weight-bold" for="recipient-email">
                                    Email message
                                    <span
                                        class="text-danger">
                                        *
                                    </span>
                                </label>
                                <textarea type="" id="email-body" class="form-control w-100"></textarea>
                                <p class="text-muted my-2">Characters remaining</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <hr class="mb-5"/>
        </div>
    </div>
</div>
</div>

@section Scripts
{
    <script type="module" src="js/index.js"></script>
}